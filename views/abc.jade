    #theCarousel.carousel.slide(data-ride='carousel')
      // Define how many slides to put in the carousel
      ol.carousel-indicators
        li.active(data-target='#theCarousel', data-slide-to='0')  
        li(data-target='#theCarousel', data-slide-to='1')  
        li(data-target='#theCarousel', data-slide-to='2')  
      // Define the text to place over the image
      .carousel-inner
        .item.active
          .slide1
          .carousel-caption
            h1 Amazing Environment
            p Thousands of ways to save it
            p
              a.btn.btn-primary.btn-sm(href='#') Get them Now
        .item
          .slide2
          .carousel-caption
            h1 Yarra agribusiness simulation
            p Better way to understand the food chain 
        .item
          .slide3
          .carousel-caption
            h1 Food for Thought
            p Fills the soul
      // Set the actions to take when the arrows are clicked
      a.left.carousel-control(href='#theCarousel', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left  
      a.right.carousel-control(href='#theCarousel', data-slide='next')
        span.glyphicon.glyphicon-chevron-right
